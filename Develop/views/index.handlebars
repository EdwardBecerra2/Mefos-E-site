<html>
<div class="gallery">
    <div class="mt-3 mb-3">
        <div class="row">
            <div class="card">
                <div class="card-header">
                    <h1>Product List</h1>
                </div>
                <div class="card-body">
                    <div class="row">
                        {{!-- cycles through the products and displays them handed from the homeroute.js --}}
                        {{#each products as |product|}}
                        <div class="col-md-4">
                            <img src="{{image_url}}" class="img-thumbnail mb-1" width="200" height="200" />
                            <h1> {{product_name}} </h1>
                            <h1> ${{price}} </h1>
                            <input type="button" class="btn btn-warning" onclick="addToCart(event)" data-prodid="{{id}}"
                                data-prodname="{{product_name}}" data-price="{{price}}"
                                value="Add to Cart - ${{price}}" />
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header"><b>
                    <h2>Shopping Cart</h2>
                </b></div>
            <div class="card-body">
                <table class="table">
                    <tr>
                        <th scope="col">Item Name</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Unit Price</th>
                        <th scope="col">Total Price</th>
                        <th>Remove</th>
                    </tr>
                    <tbody id="shoppingbag">
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</div>

</html>
<script src="./js/cart.js"></script>


<script>
    function remove_item(item_id) {
        if (confirm("Are sure sure?")) {
            window.location.href = `/remove_item?id=${item_id}`;
        }
    }
</script>